# https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.env]
end_of_line = lf
trim_trailing_whitespace = false

[*.{json,toml,yml,yaml,md,ini,conf,gitignore,editorconfig}]
indent_style = space

[*.{png,jpg,jpeg,gif,webp,avif,svg,ico,woff,woff2,eot,ttf}]
charset = unset
